  var settings = {
    index : {
      //- ファイル名の設定。トップページは必ずindex
      name : 'index',  
    },
    test : {
      name : 'test',
      title : 'test page',
      description : 'test page description',
      ogTitle : 'test page title for OGP',
      ogDescription : 'test page description for OGP',
      ogImage : 'img/testogimg.jpg'
